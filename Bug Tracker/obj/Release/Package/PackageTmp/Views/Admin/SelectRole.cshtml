@model BugTracker.Models.UserRoleViewModel
@{
    ViewBag.Title = "SelectRole";
}
<h2>SelectRole</h2>
@using (Html.BeginForm("SelectRole", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => Model.Id)

    @Html.AntiForgeryToken()

   
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.LastName)
            </td>
        </tr>

    <div>
        @Html.ListBox("SelectedRoles", Model.Roles)
    </div>
            <input type="submit" value="Change Roles" class="btn btn-primary" />
}



