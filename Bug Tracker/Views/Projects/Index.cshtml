@model IEnumerable<BugTracker.Models.Project>
@{
    Layout = null;
}

 <!-- Bootstrap -->
<link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Font Awesome -->
<link href="~/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
<!-- NProgress -->
<link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
<!-- iCheck -->
<link href="~/vendors/iCheck/skins/flat/green.css" rel="stylesheet">
<!-- Custom Theme Style -->
<link href="~/build/css/custom.min.css" rel="stylesheet">
<!-- Data table-->
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />

<h2 style="margin-left:25px;">
    @Html.ActionLink("Create New Project", "Create")
</h2>

<table  id="mytable" class="table table-striped projects">
    <thead>
        <tr>
            <th style="width: 1%">#</th>
            <th style="width: 20%">@Html.DisplayNameFor(model => model.Name)</th>
            <th>Team Members</th>
            <th>Project Progress</th>
            <th>Status</th>
            <th style="width: 20%">#Edit</th>
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr>
            <td>#</td>
            <td>
                <a>@Html.DisplayFor(modelItem => item.Name)</a>
                <br />
                <small>Created 01.01.2015</small>
            </td>
            <td>
                <ul class="list-inline">
                    <li>
                        <img src="images/user.png" class="avatar" alt="Avatar">
                    </li>
                    <li>
                        <img src="images/user.png" class="avatar" alt="Avatar">
                    </li>
                    <li>
                        <img src="images/user.png" class="avatar" alt="Avatar">
                    </li>
                    <li>
                        <img src="images/user.png" class="avatar" alt="Avatar">
                    </li>
                </ul>
            </td>
            <td class="project_progress">
                <div class="progress progress_sm">
                    <div class="progress-bar bg-green" role="progressbar" data-transitiongoal="57"></div>
                </div>
                <small>57% Complete</small>
            </td>
            <td>
                <button type="button" class="btn btn-success btn-xs">Success</button>
            </td>
            <td>
                <a href="@Url.Action("Edit", "Projects", new { id = item.Id })" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                <a href="@Url.Action("Details", "Projects", new {id = item.Id})" class="btn btn-info btn-xs"><i class="fa fa-info"></i> Detail </a>
                <a href="@Url.Action("Delete", "Projects", new { id=item.Id })" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                <a href="@Url.Action("AssignProjects","AdminProjectAssign", new { projectId = item.Id }, null)" class="btn btn-danger btn-xs"><i class="fa fa-plus"></i> Assign Project </a>
                <a href="@Url.Action( "Create", "Tickets", new { id = item.Id}, null)" class="btn btn-danger btn-xs"><i class="fa fa-plus"></i> Create Ticket </a>
            </td>
        </tr>
      }
   </tbody>
</table>

<h2 style="margin-left:25px;">@Html.ActionLink("Back to Homepage", "Index", "Home")</h2>


 <!-- jQuery -->
<script src="~/vendors/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- FastClick -->
<script src="~/vendors/fastclick/lib/fastclick.js"></script>
<!-- NProgress -->
<script src="~/vendors/nprogress/nprogress.js"></script>
<!-- bootstrap-progressbar -->
<script src="~/vendors/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>

<!-- Custom Theme Scripts -->
<script src="~/build/js/custom.min.js"></script>

   <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>$('#mytable').DataTable();</script>