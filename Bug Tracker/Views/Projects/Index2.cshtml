@model IEnumerable<BugTracker.Models.Project>

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="mytable" class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
        </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Assign projects", "AssignProjects","AdminProjectAssign", new { projectId = item.Id }, null) |
            @Html.ActionLink("Create ticket", "Create", "Tickets", new { id = item.Id}, null)
        </td>
    </tr>
}
</tbody>
</table>

<p>@Html.ActionLink("Back to Homepage", "Index","Home")</p>

@section scripts{
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script>$('#mytable').DataTable();</script>
}